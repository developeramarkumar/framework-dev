{% extends "AdminBundle::Layout/auth.html.twig" %}

{% block title %}AdminBundle:Auth\Login:login{% endblock %}

{% block body %}
	
	<div class="login-logo">
		{% image '@AdminBundle/Resources/public/img/login_logo.png' %}
		    <img src="{{ asset_url }}" />
		{% endimage %}
      </div>

      <h2 class="form-heading">login</h2>
      <div class="container log-row">
          <form class="form-signin" action="{{path('admin.login.post')}}" method="post">
          		<div class="row">
					<div class="col-md-6 col-md-offset-3">
						{% if error %}
					        <div class="text-danger"><strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong></div>
					    {% endif %}
					</div>
				</div>
              <div class="login-wrap">
                  <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="User ID" autofocus>
                  <input type="password" class="form-control" name="_password" placeholder="Password">
                  
                 
                  <label class="checkbox-custom check-success">
                      <input type="checkbox" value="remember-me" id="checkbox1"> <label for="checkbox1">Remember me</label>
                      <a class="pull-right" data-toggle="modal" href="#forgotPass"> Forgot Password?</a>
                  </label>
                  <input type="hidden" name="_target_path" value="admin.dashboard" />
	        				<input type="hidden" name="_failure_path" value="admin.login.form" />
                  <button class="btn btn-lg btn-success btn-block" type="submit">LOGIN</button>

              </div>
          </form>
      </div>
	
{% endblock %}	
